{% extends 'base.html.twig' %}

{% block page_classes %}
  wiki-all-page
{% endblock %}

{% block title %}
  {{ 'wiki.all_pages'|trans }}
{% endblock %}

{% block head %}
  <link rel="canonical" href="{{ path('wiki_all') }}">

  {% include '_includes/meta_pagination.html.twig' with {pager: pages} only %}
{% endblock %}

{% block body %}
  <h1 class="page-heading">{{ block('title') }}</h1>

  <table class="table">
    <thead>
      <tr>
        <th class="table__shrink">{{ 'wiki.path'|trans }}</th>
        <th>{{ 'wiki.page_title'|trans }}</th>
      </tr>
    </thead>
    <tbody>
      {% for page in pages %}
        <tr>
          <td class="table__shrink"><a href="{{ path('wiki', {path: page.path}) }}">{{ page.path }}</a></td>
          <td>{{ page.latestRevision.title }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  {% include '_includes/pagination.html.twig' with {pager: pages} only %}
{% endblock %}

