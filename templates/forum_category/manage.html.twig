{% extends 'base.html.twig' %}

{% block page_classes 'forum-category-manage-page' %}
{% block title 'title.manage_forum_categories'|trans %}

{% block head %}
  {{ include('_includes/meta_pagination.html.twig', {pager: categories}, with_context=false) }}
{% endblock %}

{% block body %}
  <h1 class="page-heading">{{ 'title.manage_forum_categories'|trans }}</h1>

  <p role="navigation">
    <a href="{{ path('create_forum_category') }}" class="button">{{ 'nav.new_category'|trans }}</a>
  </p>

  <table class="table">
    <thead>
      <tr>
        <th class="table__shrink">{{ 'label.name'|trans }}</th>
        <th>{{ 'label.title'|trans }}</th>
        <th class="table__shrink"></th>
      </tr>
    </thead>
    <tbody>
      {% for category in categories %}
        <tr>
          <td class="table__shrink"><a href="{{ path('forum_category', {name: category.name}) }}">{{ category.name }}</a></td>
          <td>{{ category.title }}</td>
          <td class="table__shrink">
            <a href="{{ path('edit_forum_category', {name: category.name}) }}" class="button button--inline">
              {{- 'action.edit'|trans -}}
            </a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  {{ include('_includes/pagination.html.twig', {pager: categories}, with_context=false) }}
{% endblock %}
