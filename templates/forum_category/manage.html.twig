{% extends 'base.html.twig' %}
{% use '_layouts/single_column.html.twig' %}

{% block main_classes 'container container--two-col-expand vertical-pad vp vp--guttered' %}

{% block title 'title.manage_forum_categories'|trans %}

{% block head %}
  {{ include('_includes/meta_pagination.html.twig', {pager: categories}, with_context=false) }}
{% endblock %}

{% block body %}
  <header class="nav nav--guttered nav--justify-space-between pad">
    <h1 class="no-margin">{{ 'title.manage_forum_categories'|trans }}</h1>

    <nav>
      <a href="{{ path('create_forum_category') }}" class="button button--secondary">{{ 'nav.new_category'|trans }}</a>
    </nav>
  </header>

  <table class="table">
    <thead>
      <tr>
        <th class="table__shrink">{{ 'label.name'|trans }}</th>
        <th>{{ 'label.title'|trans }}</th>
        <th class="table__shrink"></th>
      </tr>
    </thead>
    <tbody>
      {% for category in categories %}
        <tr>
          <td class="table__shrink"><a href="{{ path('forum_category', {name: category.name}) }}">{{ category.name }}</a></td>
          <td>{{ category.title }}</td>
          <td class="table__shrink">
            <a href="{{ path('edit_forum_category', {name: category.name}) }}" class="button button--inline button--secondary">
              {{- 'action.edit'|trans -}}
            </a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <div class="pad">
    {{ include('_includes/pagination.html.twig', {pager: categories}, with_context=false) }}
  </div>
{% endblock %}
