{
    "name": "postmill/postmill",
    "license": "Zlib",
    "type": "project",
    "description": "Free, web-based, social link aggregator with voting and nested comments.",
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1.3",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-pdo_pgsql": "*",
        "eightpoints/guzzle-bundle": "^7.3",
        "embed/embed": "^3.0",
        "ezyang/htmlpurifier": "^4.8",
        "friendsofsymfony/jsrouting-bundle": "^2.1",
        "gregwar/captcha": "^1.1",
        "gregwar/captcha-bundle": "^2.0.4",
        "league/commonmark": "^0.18.1",
        "liip/imagine-bundle": "^2.0",
        "oneup/flysystem-bundle": "^3.0",
        "ramsey/uuid": "^3.7",
        "ramsey/uuid-doctrine": "^1.4",
        "sabberworm/php-css-parser": "^8.1",
        "sebastian/diff": "^3.0",
        "sensio/framework-extra-bundle": "^5.1",
        "sensiolabs/security-checker": "^5.0.3",
        "symfony/asset": "^4.0",
        "symfony/cache": "^4.0",
        "symfony/css-selector": "^4.0",
        "symfony/dom-crawler": "^4.0",
        "symfony/dotenv": "^4.0",
        "symfony/expression-language": "^4.0",
        "symfony/flex": "^1.0",
        "symfony/form": "^4.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/monolog-bundle": "^3.0",
        "symfony/orm-pack": "^1.0",
        "symfony/polyfill-intl-grapheme": "^1.4",
        "symfony/requirements-checker": "^1.0",
        "symfony/security-bundle": "^4.0",
        "symfony/serializer-pack": "^1.0",
        "symfony/swiftmailer-bundle": "^3.0",
        "symfony/translation": "^4.0",
        "symfony/twig-bundle": "^4.0",
        "symfony/validator": "^4.0",
        "symfony/web-link": "^4.0",
        "symfony/webpack-encore-bundle": "^1.2",
        "twig/extensions": "^1.4",
        "twig/twig": "^2.0",
        "webuni/commonmark-table-extension": "^0.9.0",
        "white-october/pagerfanta-bundle": "^1.0",
        "willdurand/js-translation-bundle": "^2.6"
    },
    "require-dev": {
        "dama/doctrine-test-bundle": "^5.0",
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "friendsofphp/php-cs-fixer": "^2.3",
        "symfony/browser-kit": "^4.0",
        "symfony/debug-pack": "^1.0",
        "symfony/maker-bundle": "^1.5",
        "symfony/phpunit-bridge": "^4.0",
        "symfony/profiler-pack": "^1.0",
        "symfony/var-dumper": "^4.0",
        "symfony/web-server-bundle": "^4.0"
    },
    "replace": {
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "requirements-checker": "script",
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "fos:js-routing:dump --target=public/js/routing.js": "symfony-cmd",
            "bazinga:js-translation:dump public/js --merge-domains --format=js": "symfony-cmd",
            "security-checker security:check": "script"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "symfony": {
            "allow-contrib": true
        }
    },
    "config": {
        "platform": {
            "php": "7.1.3"
        },
        "sort-packages": true
    }
}
